{
    "type": "project",
    "license": "proprietary",
    "minimum-stability": "stable",
    "prefer-stable": true,
    "require": {
        "php": "^8.3",
        "ext-ctype": "*",
        "ext-iconv": "*",
        "symfony/console": "7.1.*",
        "symfony/dotenv": "7.1.*",
        "symfony/flex": "^2",
        "symfony/framework-bundle": "7.1.*",
        "symfony/runtime": "7.1.*",
        "symfony/twig-bundle": "7.1.*",
        "symfony/yaml": "7.1.*",
        "twig/extra-bundle": "^2.12|^3.0",
        "twig/twig": "^2.12|^3.0"
    },
    "require-dev": {
        "phan/phan": "^5",
        "php-parallel-lint/php-console-highlighter": "^1",
        "php-parallel-lint/php-parallel-lint": "^1",
        "phpcompatibility/php-compatibility": "^9",
        "phpmd/phpmd": "^2",
        "phpstan/phpstan": "^2",
        "phpstan/phpstan-doctrine": "^2",
        "phpstan/phpstan-phpunit": "^2",
        "phpstan/phpstan-strict-rules": "^2",
        "phpstan/phpstan-symfony": "^2",
        "phpunit/phpunit": "^10",
        "slevomat/coding-standard": "^8",
        "squizlabs/php_codesniffer": "^3",
        "symfony/debug-bundle": "7.1.*",
        "symfony/monolog-bundle": "^3.0",
        "symfony/stopwatch": "7.1.*",
        "symfony/web-profiler-bundle": "7.1.*",
        "vimeo/psalm": "^5",
        "vincentlanglet/twig-cs-fixer": "^3",
        "webservco/coding-standards": "^0"
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "php-http/discovery": true,
            "symfony/flex": true,
            "symfony/runtime": true
        },
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\": "tests/"
        }
    },
    "replace": {
        "symfony/polyfill-ctype": "*",
        "symfony/polyfill-iconv": "*",
        "symfony/polyfill-php72": "*",
        "symfony/polyfill-php73": "*",
        "symfony/polyfill-php74": "*",
        "symfony/polyfill-php80": "*",
        "symfony/polyfill-php81": "*",
        "symfony/polyfill-php82": "*"
    },
    "scripts": {
        "auto-scripts": {
            "cache:clear": "symfony-cmd",
            "assets:install %PUBLIC_DIR%": "symfony-cmd"
        },
        "post-install-cmd": [
            "@auto-scripts"
        ],
        "post-update-cmd": [
            "@auto-scripts"
        ],
        "check:lint": "vendor/bin/parallel-lint bin config public src tests",
        "check:phan": "vendor/bin/phan --config-file vendor/webservco/coding-standards/phan/config.php",
        "check:phpcs": "vendor/bin/phpcs --standard=.phpcs/php-coding-standard.xml --extensions=php -sp bin config public src tests --ignore=./config/bundles.php,./tests/bootstrap.php",
        "check:phpmd": "vendor/bin/phpmd bin,config,public,src,tests json vendor/webservco/coding-standards/phpmd/phpmd-rule-set.xml",
        "check:phpstan": "vendor/bin/phpstan analyse bin config public src tests --ansi -c vendor/webservco/coding-standards/phpstan/phpstan-symfony-doctrine.neon --level=max",
        "check:psalm": "vendor/bin/psalm --config=vendor/webservco/coding-standards/psalm/psalm.xml --no-diff",
        "check:twig": "symfony console lint:twig && vendor/bin/twig-cs-fixer lint templates",
        "check": [
            "@check:lint",
            "@check:phpcs",
            "@check:twig",
            "@check:phpstan",
            "@check:phpmd",
            "@check:psalm"
        ],
        "fix:phpcs": "vendor/bin/phpcbf --standard=.phpcs/php-coding-standard.xml --extensions=php -sp bin config public src tests --ignore=./config/bundles.php,./tests/bootstrap.php",
        "fix:twig": "vendor/bin/twig-cs-fixer lint templates --fix",
        "test" : "XDEBUG_MODE=coverage vendor/bin/phpunit --colors=always --configuration vendor/webservco/coding-standards/phpunit/phpunit-10.xml --display-deprecations --display-errors --display-incomplete --display-notices --display-skipped --display-warnings",
        "test:dox" : "@test --testdox"
    },
    "conflict": {
        "symfony/symfony": "*"
    },
    "extra": {
        "symfony": {
            "allow-contrib": false,
            "require": "7.1.*"
        }
    }
}
